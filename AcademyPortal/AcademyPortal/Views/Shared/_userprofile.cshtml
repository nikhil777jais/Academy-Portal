@using AcademyPortal.Model
@model ApplicationUser;

@using Microsoft.AspNetCore.Identity;
@inject UserManager<ApplicationUser> _userManager
<div class="col-md-8">
    <div class="alert alert-info bg-info text-center text-dark mt-3 py-2" role="alert">
        Details of <b>@Model.Email</b>
    </div>
    @{
        var roles = await @_userManager.GetRolesAsync(@Model);
        string role = @roles.Any() ? @roles[0] : "No role";
    }
    <section class="section about-section gray-bg" id="about">
        <div class="container">
            <div class="row align-items-center flex-row-reverse">
                <div class="col-md-6">
                    <div class="about-text go-to">
                        <h3 class="dark-color">About @Model.FirstName</h3>
                        <h6 class="theme-color lead">He is a Member of <b style="color: green;">@role</b> Role</h6>
                        <div class="row about-list">
                            <div class="col-md-6">
                                <div class="media">
                                    <label>UserName</label>
                                    <p>@Model.UserName</p>
                                </div>
                                <div class="media">
                                    <label>Full Name</label>
                                    <p>@Model.FirstName @Model.LastName</p>
                                </div>
                                <div class="media">
                                    <label>Gender</label>
                                    <p>@Model.Gender</p>
                                </div>
                                <div class="media">
                                    <label>Date Joined</label>
                                    <p>@Model.DateJoined</p>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="media">
                                    <label>E-mail</label>
                                    <p>@Model.Email</p>
                                </div>
                                <div class="media">
                                    <label>Phone</label>
                                    <p>@Model.PhoneNumber</p>
                                </div>
                                <div class="media">
                                    <label>Date Of Birth</label>
                                    <p>@Model.DateOfBirth</p>
                                </div>
                                <div class="media">
                                    <label>Status</label>
                                    <p>@Model.status.Name</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="about-avatar">
                        <img src="https://bootdey.com/img/Content/avatar/avatar7.png" title="" alt="">
                    </div>
                </div>
            </div>
            <div class="counter">
                <div class="row">
                    <div class="col-6 col-md-3">
                        <div class="count-data text-center">
                            <h6 class="count h2" data-to="500" data-speed="500">500</h6>
                            <p class="m-0px font-w-600">Assigned Batches</p>
                        </div>
                    </div>
                    <div class="col-6 col-md-3">
                        <div class="count-data text-center">
                            <h6 class="count h2" data-to="150" data-speed="150">150</h6>
                            <p class="m-0px font-w-600">Created Batches</p>
                        </div>
                    </div>
                    <div class="col-6 col-md-3">
                        <div class="count-data text-center">
                            <h6 class="count h2" data-to="850" data-speed="850">850</h6>
                            <p class="m-0px font-w-600">Created Modules</p>
                        </div>
                    </div>
                    <div class="col-6 col-md-3">
                        <div class="count-data text-center">
                            <h6 class="count h2" data-to="190" data-speed="190">190</h6>
                            <p class="m-0px font-w-600">Telephonic Talk</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>