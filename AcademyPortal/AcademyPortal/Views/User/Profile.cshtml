@using AcademyPortal.Models;
@using AcademyPortal.ViewModel
@model ProfileViewModel;

@{
    ViewData["Title"] = "Profile";
    var user = ViewData["user"] as ApplicationUser;
}

<div class="container-fluid ">
    <div class="row">
        <div class="col-md-4">
            <div class="alert alert-success bg-sussess text-black text-center mt-3 py-2" role="alert">
                <b>Fill the below given fileds</b>
            </div>
            <div class="row justify-content-center">
                <div class="col-md-10">
                    <form method="post" novalidate>
                        <div class="form-group pb-1">
                            <label asp-for="FirstName"></label>
                            <input asp-for="FirstName" class="form-control" />
                            <small><span asp-validation-for="FirstName" class="text-danger"></span></small>
                        </div>
                        <div class="form-group pb-1">
                            <label asp-for="LastName"></label>
                            <input asp-for="LastName" class="form-control" />
                            <small><span asp-validation-for="LastName" class="text-danger"></span></small>
                        </div>
                        <div class="form-group pb-1">
                            <label asp-for="PhoneNumber"></label>
                            <input asp-for="PhoneNumber" class="form-control" />
                            <small><span asp-validation-for="PhoneNumber" class="text-danger"></span></small>
                        </div>
                        <div class="form-group pb-1">
                            <label asp-for="DateOfBirth"></label>
                            <input asp-for="DateOfBirth" class="form-control" />
                            <small><span asp-validation-for="DateOfBirth" class="text-danger"></span></small>
                        </div>
                        <div class="form-group pb-1">
                            <label asp-for="Gender"></label>
                            <input asp-for="Gender" class="form-control" />
                            <small><span asp-validation-for="Gender" class="text-danger"></span></small>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Update" class="btn btn-success mt-2" />
                            <a asp-controller="Home" asp-action="Index" class="btn btn-danger mt-2">Go Back</a>
                        </div>
                    </form>
                    @if (TempData["Message"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show mt-3" role="alert">
                            @TempData["Message"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }
                </div>
            </div>
        </div>
        <partial name="_userprofile" model="@user" />
    </div>
</div>

