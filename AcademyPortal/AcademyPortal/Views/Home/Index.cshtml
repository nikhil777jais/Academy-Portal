@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Message"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
</div>
<div class="container">
    <div class="row justify-content-between mt-5">
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-header">
                    <img class="img-card" src="~/images/skill.png" class="card-img-top" alt="reistration image">
                </div>
                <div class="card-body">
                    <a asp-route="addskill" class="btn btn-color">Register Skill</a>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-header">
                    <img class="img-card" src="~/images/module.png" class="card-img-top" alt="reistration image">
                </div>
                <div class="card-body">
                    <a asp-route="addmodule" class="btn btn-color">Register Module</a>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-header">
                    <img class="img-card" src="~/images/batch.png" class="card-img-top" alt="reistration image">
                </div>
                <div class="card-body">
                    <a asp-route="addbatch" class="btn btn-color">Register Batch</a>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-header">
                    <img class="img-card" src="~/images/Mapping.png" class="card-img-top" alt="reistration image">
                </div>
                <div class="card-body">
                    <a asp-route="skillmodulemapping" class="btn btn-color">Map Skill-Module</a>
                </div>
            </div>
        </div>

    </div>
</div>